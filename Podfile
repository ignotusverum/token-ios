source 'https://github.com/CocoaPods/Specs.git'
source 'https://github.com/twilio/cocoapod-specs'

def pods

swift_version = '3.1'

# Extensions
pod 'EZSwiftExtensions'

# Performance update
pod 'AsyncDisplayKit'

pod 'NSString+RemoveEmoji', '~> 1.0'

# Networking
pod 'Alamofire'
pod 'SwiftyJSON'
pod 'PromiseKit', '~> 4.0'

pod 'ReachabilitySwift'

pod 'CardIO'

# Collections animation
pod 'Spruce', '~> 1.0.0'

# Core Data
pod 'CoreStore', '~> 3.1.1'

pod 'UITextView+Placeholder'

# UI / Controllers / Views
pod 'EZSwipeController'
pod 'JDStatusBarNotification' # Status bar view
pod 'pop' # Custom animations
pod 'IGListKit', '~> 2.0.0'

pod 'IQKeyboardManagerSwift'
pod 'IQDropDownTextField'

pod 'SVProgressHUD' # Progress Circle

# Payment
pod 'Stripe'  # Credit card entry
pod 'KeychainAccess

# Conversation
pod 'TwilioChatClient', '1.0.0'

#Image fetching
pod 'Kingfisher'

# Popup
pod 'PopupDialog', '~> 0.5'

# Analytics
pod 'Analytics'
pod 'Segment-Branch'
pod 'Segment-Mixpanel'

pod 'Masonry'

pod 'GoogleAnalytics', '~> 3.14'
pod 'GoogleIDFASupport', '~> 3.14'

pod 'Fabric'
pod 'Crashlytics'

#  CC info
pod 'CardIO'
pod 'BKMoneyKit'

#CI + Testing
pod 'BuddyBuildSDK'

pod 'AlamofireImage'

# swift integration
use_frameworks!

# who cares about warnings
inhibit_all_warnings!

end

target 'Dev' do
    pods
end

target 'Token' do
    pods
end
